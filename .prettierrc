{
  "trailingComma": "none",
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component,}",
      "options": { "parser": "html" }
    },
    {
      "files": ["*.html", "*.js", ".css", ".xml", ".cls"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
